{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "CoverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "Intro": {
      "type": "text",
      "required": true
    },
    "Date": {
      "type": "date",
      "required": true
    },
    "Content": {
      "type": "blocks"
    },
    "Blocks": {
      "type": "dynamiczone",
      "components": [
        "post.image-slider",
        "post.single-image",
        "post.text",
        "post.video",
        "post.you-tube-video"
      ]
    },
    "oembed": {
      "type": "customField",
      "customField": "plugin::oembed.oembed"
    },
    "slug": {
      "type": "uid",
      "targetField": "Title",
      "required": true
    }
  }
}
